{
    "name": "eventum/irc-bot",
    "config": {
        "platform": {
            "php": "5.6.0"
        },
        "sort-packages": true
    },
    "archive": {
        "exclude": [
            "*.dist",
            "*.tar",
            ".*",
            "Tests",
            "composer.*",
            "demo",
            "doc",
            "docs",
            "ext",
            "extras",
            "phpxmlrpc/debugger",
            "phpxmlrpc/lib",
            "tests"
        ]
    },
    "autoload": {
        "psr-4": {
            "Eventum\\IrcBot\\": "src/"
        }
    },
    "require": {
        "php": "^5.6.0 || ^7.0",
        "eventum/rpc": "^4.3",
        "pear/net_smartirc": "^1.1.13",
        "pimple/pimple": "^3.2",
        "psr/log": "^1.0",
        "symfony/options-resolver": "^3.4"
    },
    "require-dev": {
        "symfony/var-dumper": "^3.4"
    }
}
